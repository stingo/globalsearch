<p id="notice"><%= notice %></p>

<h1>Adds</h1>

<%= render 'layouts/searchform' %>

<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Town</th>
      <th>Local area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adds.each do |add| %>
      <tr>
        <td><%= add.name %></td>
        <td><%= add.slug %></td>
        <td><%= add.town %></td>
        <td><%= add.local_area %></td>
        <td><%= link_to 'Show', add %></td>
        <td><%= link_to 'Edit', edit_add_path(add) %></td>
        <td><%= link_to 'Destroy', add, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Add', new_add_path %>
